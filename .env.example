# QuantiFy Environment Variables
# Copy this file to .env and update with your values

# ============================================
# Database Configuration
# ============================================

# PostgreSQL (Production)
POSTGRES_DB=quantify_db
POSTGRES_USER=quantify_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Database URL for SQLAlchemy
# Development (SQLite)
# DATABASE_URL=sqlite+aiosqlite:///./quantify.db

# Production (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://quantify_user:CHANGE_THIS_STRONG_PASSWORD@postgres:5432/quantify_db

# ============================================
# Redis Configuration
# ============================================

REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# ============================================
# Backend Configuration
# ============================================

# Environment: development, staging, production
ENVIRONMENT=production

# Logging
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================
# Frontend Configuration
# ============================================

# Node Environment
NODE_ENV=production

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# For production, use your domain:
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com

# Telemetry
NEXT_TELEMETRY_DISABLED=1

# ============================================
# Binance API (Optional)
# ============================================

BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_TESTNET=false

# ============================================
# Security
# ============================================

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_THIS_SECRET_KEY

# Session Secret
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET

# ============================================
# Monitoring & Observability
# ============================================

# Sentry (Optional)
SENTRY_DSN=

# Prometheus
PROMETHEUS_ENABLED=false

# ============================================
# Email Notifications (Optional)
# ============================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@quantify.com

# ============================================
# pgAdmin Configuration
# ============================================

PGADMIN_DEFAULT_EMAIL=admin@quantify.com
PGADMIN_DEFAULT_PASSWORD=admin

# ============================================
# Docker Configuration
# ============================================

# Compose project name
COMPOSE_PROJECT_NAME=quantify

# ============================================
# Development Only
# ============================================

# Debug mode
DEBUG=false

# Hot reload
WATCHPACK_POLLING=true

