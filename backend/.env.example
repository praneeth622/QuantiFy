# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./quantify.db
# For PostgreSQL (Production):
# DATABASE_URL=postgresql+asyncpg://quantify_user:your_password@localhost:5432/quantify_db

# Redis Configuration (for caching and real-time data)
REDIS_URL=redis://localhost:6379/0

# API Keys and External Services
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080","https://yourdomain.com"]

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30

# Analytics Configuration
ANALYTICS_WINDOW_SIZES=60,300,900,3600  # 1m, 5m, 15m, 1h in seconds
DEFAULT_LOOKBACK_PERIODS=100
MAX_SYMBOLS_PER_REQUEST=50

# Alert Configuration
ALERT_COOLDOWN_SECONDS=60
MAX_ALERTS_PER_MINUTE=10

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Data Retention
TICK_DATA_RETENTION_DAYS=30
ANALYTICS_DATA_RETENTION_DAYS=365